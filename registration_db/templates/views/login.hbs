<!DOCTYPE html>
<html lang="en">

<head>
    {{>links}}
</head>

<body>
    {{>nav}}

    <div class="container">
        <div class="row my-5">
            <div class="col-sm-6 col-md-4 mx-auto">
                <h1 class="text-center login-title my-5">Employee Login Form</h1>
                <div class="account-wall">
                    <img class="profile-img"
                        src="https://th.bing.com/th/id/OIP.yHjEfYkKVKI4HefomX2A6wHaHa?w=176&h=180&c=7&o=5&pid=1.7"
                        alt="">
                    <form class="form-signin" action="/login" method="POST">
                        <input type="text" class="form-control" placeholder="Email" required name="email">
                        <input type="password" class="form-control" placeholder="Password" required name="password">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                        <label class="checkbox pull-left mt-3">
                            <input type="checkbox" value="remember-me"> Remember me
                            <label>
                                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                    </form>
                </div>
                <a href="/registration" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>

    {{>jqueryLinks}}
    {{>footer}}
</body>

</html>